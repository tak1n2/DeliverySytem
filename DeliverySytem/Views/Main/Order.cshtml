@model IEnumerable<DeliverySytem.Models.OrderLine>

@{
    ViewData["Title"] = "Your Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var order = ViewBag.Order as DeliverySytem.Models.Order;
}

<h2>Your Order for @DateTime.UtcNow.Date.ToShortDateString()</h2>

@if (order != null)
{
    <p><strong>Total Amount:</strong> @order.TotalAmount.ToString("C")</p>
    <p><strong>Created:</strong> @order.CreatedAt.ToLocalTime()</p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Shop</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Price</td>
                    <td>@item.ShopKey</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-primary">Back to Catalog</a>
    </div>
}
else
{
    <p>You have no orders for today.</p>
}